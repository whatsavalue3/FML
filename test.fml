local const u8* screen = 0xf800;

local const u8* ki = 0xf046;
local const u8* ko = 0xf040;

local u16 i = 0;
local u16 j = 0;

local const u8 bitmap[128] = [
0x3C,0x66,0x66,0x6E,0x76,0x66,0x66,0x3C,0x18,0x38,0x78,0x18,0x18,0x18,0x18,0x7E,0x18,0x36,0x66,0x0C,0x18,0x30,0x60,0x7E,0x3C,0x66,0x06,0x1C,0x06,0x06,0x66,0x3C,0x0C,0x1C,0x3C,0x6C,0x7E,0x0C,0x0C,0x0C,0x7E,0x60,0x60,0x78,0x0C,0x06,0x0C,0x78,0x3C,0x66,0x60,0x7C,0x66,0x66,0x3C,0x18,0x7E,0x06,0x06,0x0C,0x18,0x18,0x18,0x18,0x3C,0x66,0x66,0x3C,0x66,0x66,0x66,0x3C,0x3C,0x66,0x66,0x66,0x3E,0x06,0x66,0x3C,0x18,0x3C,0x66,0x66,0x7E,0x66,0x66,0x66,0x7C,0x66,0x66,0x7C,0x66,0x66,0x66,0x7C,0x3C,0x66,0x60,0x60,0x60,0x60,0x66,0x3C,0x7C,0x66,0x66,0x66,0x66,0x66,0x66,0x7C,0x7E,0x60,0x60,0x7C,0x60,0x60,0x60,0x7E,0x7E,0x60,0x60,0x7C,0x60,0x60,0x60,0x60
];

function u8 GetKey(u8 x, u8 y)
	*ki = 1<<x;
	return ((~*ko)&(1<<y));
end

local u8 up = 0;
local u8 down = 0;
local u16 pos = 0;

function void main()
	while 1 do
		up = GetKey(0,0);
		if up then
			pos = pos + 1;
		end
		down = GetKey(0,1);
		if down then
			pos = pos - 1;
		end
		
		i = 0;
		*cast(u8*)(0xF037) = 0x4;
		while 64 > i do
			*cast(u8*)(screen + (i<<5)) = bitmap[i];
			i = i + 1;
		end
		i = 0;
		while 64 > i do
			*cast(u8*)(screen + (i<<5) +1) = bitmap[i+64];
			i = i + 1;
		end
	end
end
